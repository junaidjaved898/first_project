 <%= form_for @user, url: users_path(@user), remote: true ,method: :post do |f| %>
    <div id="Contact Us">
      <div class="container">
        <div class="row no-gutters">
          <div class="col-12">
            <div class="d-flex justify-content-center">
              <h2 class="text-center heading"> <%= local_assigns[:heading] %></h2>
            </div>
          </div>
          <div class="col-12">
            <div class="d-flex justify-content-center">
              <div class="row no-gutters">   
                <div class="col-12">
                  <label>First name</label>
                  <%= f.text_field :firstname, class: 'w-100', required: true %>
                </div>                                  
                <div class="col-12 form-group">
                  <label>Last name</label>
                  <%= f.text_field :lastname, class: 'w-100', required: true %><br />
                </div>
                <div class="col-12 form-group">
                  <label>Email</label>
                  <%= f.email_field :email, class: 'w-100', required: true %> 
                </div>
                  <%= f.submit "Submit", class: 'btn btn-outline-primary' %>
                  <%= link_to 'Back', url_for(:back), class: 'btn btn-outline-secondary ml-3' %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>    
  <% end %>
