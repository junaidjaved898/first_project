<div class="container">
  <div class="row">
    <div class="col-12">
      <div class="d-flex justify-content-center">
        <h1>Freelancers Record</h1>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-12">
      <div class="d-flex justify-content-center">
        <div class="table-wrapper-scroll-y my-custom-scrollbar">  
          <table class="table table-striped table-striped mb-0">
            <thead class=>
              <tr>
                <th scope="col">First Name</th>
                <th scope="col">Last Name</th>
                <th scope="col">Email</th>
              </tr>
            </thead>

            <% users.each do |user| %>
              <tr>
                <td><%= user.firstname %></td>
                <td><%= user.lastname %></td>
                <td><%= user.email %></td>
                  <td><%= link_to 'Show', user_path(user), class: 'btn btn-outline-secondary ml-3' %></td>
                  <td><%= link_to 'Delete', user_path(user), class: 'btn btn-outline-secondary ml-3',
                          method: :delete,
                          data: { confirm: 'Are you sure?'} %></td>
                  <td><%= link_to 'Edit Record', edit_user_path(user), class: 'btn btn-outline-secondary ml-3' %></td>
              </tr>
            <% end %>
          </table>
        </div>
      </div>
    </div>
  </div> 
</div>
